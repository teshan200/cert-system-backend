# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================
# Polygon Amoy Testnet RPC URL
RPC_URL=https://rpc-amoy.polygon.technology

# Relayer private key (the account that will send transactions and pay gas)
# ⚠️ NEVER commit your actual private key to version control
RELAYER_PRIVATE_KEY=your_relayer_private_key_here

# Smart contract address (deployed CertificateVerificationNoNonce)
CONTRACT_ADDRESS=your_contract_address_here

# ========================================
# DATABASE CONFIGURATION (MySQL)
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password_here
DB_NAME=cert_verification_system

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3001
NODE_ENV=development

# ========================================
# JWT & SESSION SECRETS
# ========================================
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# ========================================
# GEMINI AI API (for career path analysis)
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# FILE UPLOAD PATHS
# ========================================
UPLOAD_PATH=./uploads
LOGO_PATH=./uploads/logos
VERIFICATION_DOCS_PATH=./uploads/verification_docs

# ========================================
# EMAIL (SMTP) CONFIGURATION
# ========================================
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
SMTP_FROM=CertiChain <no-reply@example.com>

# Admin email - receives contact form submissions and system notifications
ADMIN_EMAIL=admin@example.com

# Public backend URL used in email links
APP_URL=http://localhost:3001

# Frontend app URL used for email/login links (single URL)
FRONTEND_URL=https://your-frontend-domain.com

# Require email verification for login (default true if unset)
REQUIRE_EMAIL_VERIFICATION=true

# Verification link expiry (hours)
EMAIL_VERIFICATION_TTL_HOURS=24

EMAIL_LOGO_URL=https://your-domain.com/path-to-logo.png
SUPPORT_EMAIL=support@yourdomain.com
APP_NAME=CertiChain
